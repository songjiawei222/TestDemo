@model MVCFrame.Models.LoginModel
@{
  
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <style type="text/css">
     body {
         padding-top: 180px;
         padding-bottom: 40px;
         background-color: #1A2226;
     }

    .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
        box-shadow: 0 1px 2px rgba(0,0,0,.05);
    }

        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }

        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }
</style>



 
 <body>
    <div class="container">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-signin" }))
        {
            <form action="" method="post" class="form-signin">
                <h2 class="form-signin-heading">用户登录</h2>
                @Html.TextBoxFor(model => model.UserName, new { @class = "input-block-level", placeholder = "用户名" })
                @Html.TextBoxFor(model => model.Password, new { @class = "input-block-level ", Type = "Password", placeholder = "用户密码" })

                <p class="text-center text-warning">@ViewBag.Mes</p>
                <label class="checkbox">
                    @Html.CheckBoxFor(model => model.IsRememberMe) 记住我
                </label>
                <button id="login" class="btn btn-primary" type="submit" value="Login">登录</button>
            </form>
        }
    </div> <!-- /container -->
</body>

<script type="text/javascript">
    $('input').keyup(function (event) {

        if (event.keyCode == "13") {
            document.getElementById("login").click();   //服务器控件loginsubmit点击事件被触发
            return false;
        }

    });
</script>